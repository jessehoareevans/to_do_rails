<h1>Add new list</h1>

<% if @list.errors.any? %>
<h3>There were some errors, please try again!</h3>
<ul>
  <% @list.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end%>

<%= form_for @list do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>
